{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "prettier": {
      "dependsOn": ["^prettier"],
      "cache": true
    },
    "prettier:check": {
      "dependsOn": ["^prettier:check"],
      "cache": true
    },
    "eslint": {
      "dependsOn": ["^eslint"],
      "cache": true
    },
    "eslint:check": {
      "dependsOn": ["^eslint:check"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    }
  }
}
